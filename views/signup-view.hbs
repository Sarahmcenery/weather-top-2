{{> welcome-menu active="signup"}}

<section class="content box">
    <div class="columns">
        <div class="column is-half">
            <form action="/register" method="POST">
                <h3 class="subtitle">Register</h3>
                  <div class="field is-horizontal field-body">
                    <div class="field">
                        <label class="label">First Name</label>
                          <p class="control is-expanded">
                            <input class="input" type="text" placeholder="First Name" name="firstname" required>
                          </p>
                    </div>
                    
                    <div class="field">
                        <label class="label">Last Name</label>
                          <p class="control">
                            <input class="input" type="text" placeholder="Last Name" name="lastname" required>
                          </p>
                    </div>
              </div>
                    
                  <div class="field">
                    <label class="label">Email</label>
                      <div class="control has-icons-left">
                        <input class="input" type = "email" placeholder="Email" name="email" required>
                          <div class="icon is-small is-left">
                           {{> icons/envelope}}
                          </div>
                      </div>
                  </div>
              
                <div class="field">
                    <label class="label">Password</label>
                      <div class="control has-icons-left">
                        <input class="input" type="password" name="password" required>
                          <div class="icon is-small is-left">
                            {{> icons/lock}}
                          </div>
                      </div>
                </div>
              
                <button class="button is-dark is-medium is-rounded">Submit</button>
            </form>
        </div>
      
        <div class="column is-half">
            <figure class="image is-square">
                  <img src="https://cdn.glitch.global/94c9d674-fe0d-4f74-b357-97247460aa87/weather-icons4.jpg?v=1690914360646">
            </figure>
        </div>
    </div>
</section>
