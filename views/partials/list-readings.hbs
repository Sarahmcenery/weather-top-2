<table class="table is-bordered is-fullwidth">
  <thead class="has-background-grey-light"> 
    <tr>
      <th>Date/Time</th>
      <th>Code</th>
      <th>Temperature</th>
      <th>Wind Speed</th>
      <th>Wind Direction</th>
      <th>Pressure</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
         <td>
        {{currentDate}}
        </td> 
        <td>        
          {{code}}
        </td>
        <td>
          {{temperature}}
        </td>
        <td>
          {{windSpeed}}
        </td>
        <td>
          {{windDirection}}
        </td>
        <td>
          {{pressure}}
        </td>
        <td>
        <a href="/station/{{../station._id}}/deletereading/{{_id}}" class="button">
          {{>icons/delete2}}
        </a>
        </td>
      </tr>
    {{/each}}    
  </tbody>
</table>